<SignLangInt>:
    canvas:
        Color:
            rgb: (1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x:'center'
        anchor_y:'top'
        Button:
            id:_start_btn
            size_hint:1,.30
            background_color:1,1,1,1
            text:"Predict"
            font_size:'50sp'
            color: 0,0,0,1
            on_press:root.sec_screen()
    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'    
        Button:
            id:_speak_btn
            size_hint:1,.41      
            # size:150,60
            background_color:0.51,0.10,1,1
            text:"Speak"
            font_size:'50sp'
            color:1,1,1,1

    AnchorLayout:
        anchor_x:'center'
        anchor_y:'bottom'
        Button:
            id:_learn_btn
            size_hint:1,.35        
            # size:150,60
            background_color:0,0,0,1
            text:"Learn"
            font_size:'50sp'   
            color:1,1,1,1   

<SecScreen>:
    canvas:
        Color:
            rgb: (1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    BoxLayout:
        orientation:'vertical'
        
        ImageButton:
            on_press:root.back()
            source:'home.jpg' 
            size_hint:.20,.20 
            pos_hint:{'center_x':0.93,'center_y':0.8}  
             

        
        Camera:
            id:camera
            # resolution:(640,960)
            resolution:(640,540)
            play:True
            
            
        Button:
            text:'Capture Button'
            font_size:'20sp'
            color:1,1,1,1
            size_hint:.40,.20  
            pos_hint:{'x':.3,'y':.3}      
            background_color:0,0,0,1
            on_press:root.capture()
            
        Label:
            text:'The model has predicted this output'
            color:0,0,0,1

        # ScrollView:
        #     Label:
        #         id:pred_Val
        #         text:" hello "
        #         size_hint_y:None    
            

            




<RootWidget>:
    SignLangInt:
        name:"Sign_lang"

    SecScreen:
        name:"Sec_screen"    

                 