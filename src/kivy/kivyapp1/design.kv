<SignLangInt>:
    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        
        Welcome:
            id:_sli_
            size_hint:None,None

    Button:
        id:_start_bt
        size_hint:None,None
        pos_hint:{'x':.43,'y':.2}        
        size:150,60
        background_color:1,0,0,1
        text:"START"
        on_press:root.sec_screen()

<Welcome@RelativeLayout>:
    Label:
        markup:True
        text:'[size=40px] [color=#ff99cc] Welcome [/color][i] To[/i] \n [size=80px] [b] [color=#336699] SLI [/b] [/color][/size]'

<SecScreen>:
    BoxLayout:
        orientation:'vertical'
        Camera:
            id:camera
            # resolution:(640,960)
            resolution:(640,540)
            play:False
        
           
        Button:
            text:"Pause/Play"
            on_press:camera.play=not camera.play
            size_hint_y:None
            size:150,50
            background_color:1,0,0,1
        Button:
            text:'Capture'        
            size_hint_y:None
            size:150,50
            background_color:1,0,0,1
            on_press:root.capture()
        
        Button:
            text:'Predict'
            size_hint_y:None
            size:150,50
            background_color:1,0,0,1
            on_press:root.third_screen()

        Button:
            text:'Home'  
            size_hint_y:None
            size:150,50
            background_color:1,0,0,1 
            on_press:root.back() 

<ThirdScreen>:
    BoxLayout:
        AsyncImage:
            remove_from_cache: True
            reload:True 
            source: r'C:\Users\prajw\OneDrive\Desktop\Github\Sign_Language_Interpreter\src\proto_type_1\classi_img_buffer\detected.png'
            allow_stretch:True
           # source:'SLI_1.png'
            keep_ratio:True
    Button:
        text:'Home'  
        size_hint_y:None
        size:150,50
        background_color:1,0,0,1 
        on_press:root.back()          

<RootWidget>:
    SignLangInt:
        name:"Sign_lang"

    SecScreen:
        name:"Sec_screen" 

    ThirdScreen:
        name:"Third_sec"       